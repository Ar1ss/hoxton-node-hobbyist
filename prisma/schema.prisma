// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id    Int     @id 
  email String
  name  String
  photo String
  hobby Hobby[]
}

model Hobby {
  id     Int     @id 
  name   String
  photo  String
  user   User    @relation(fields: [userId], references: [id])
  userId Int
}
